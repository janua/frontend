#!/bin/bash

set -o xtrace
set -o nounset
set -o errexit

# Try newer ruby for newer sass
ruby --version

# Add bundler to the local ruby and rehash paths to pick it up
gem install bundler

export PATH=dev/gems/bin:$PATH

if [ $APPLICATION_NAME == "javascript_tests" ]
  then
    echo "Running grunt WITH tests"
    grunt --stack --no-color "$@" install clean validate compile test
  else
    echo "Running grunt WITHOUT tests"
    ./dist-assets-tc
fi
